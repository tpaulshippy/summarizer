<h1 class="text-2xl font-semibold mb-6">Municipalities</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @municipalities.each do |m| %>
    <%= link_to municipality_path(m), class: "block bg-white ring-1 ring-slate-200 rounded-lg p-4 hover:shadow-sm" do %>
      <div class="font-medium"><%= m.name %></div>
      <div class="text-sm text-slate-600 mt-1"><%= m.youtube_playlist_url %></div>
    <% end %>
  <% end %>
</div>
